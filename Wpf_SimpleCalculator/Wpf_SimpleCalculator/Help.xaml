<Window x:Class="Wpf_SimpleCalculator.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SimpleCalculator"
        mc:Ignorable="d"
        Title="Help" Height="300" Width="400">
    <StackPanel>
        <TextBlock
           Text="This is a calculator used to determine&#x0a;how much juice will be made from a&#x0a;set amount of apples.&#x0a;Tip: Gal/lb is usually about .08&#x0a; Liters/lb is usually about .30"
            HorizontalAlignment="Center"
            TextAlignment="Center"
            Margin="50"
            />
        <Button 
            x:Name="Button_Close"
            Width="100"
            Height="30"
            Content="Close"
            Click="Button_Close_Click"
            />
    </StackPanel>
</Window>
